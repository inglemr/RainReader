<% provide(:title, "All Classes") %>
<br>
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Convergence" />



<table width="100%" id="stuclasses" class="classData classList">
<thead>
  <tr class="classHeader">
    <th class="status">Status</th>
    <th class="crn">CRN</th>
    <th class="code">Code</th>
    <th class="classnum">Class<br>Num</th>
    <th class="name">Name</th>
    <th class="term">Term</th>
    <th class="credits">Credits</th>
    <th class="open">Open<br>Seats</th>
    <th class="total">Total<br> Seats</th>
    <th class="day">Days</th>
    <th class="time">Time</th>
    <th class="loc">Location</th>
    <th class="professor">Professor</th>
  </tr>


</thead>
<tbody>
<div class="spin">  <div class="rect1"></div>
  <div class="rect2"></div>
  <div class="rect3"></div>
  <div class="rect4"></div>
  <div class="rect5"></div></div>
  <% SClass.all.each do |sclass| %>


      <% if sclass.open == "Closed" %>
        <tr class="danger">
      <% else %>
        <tr class="success">
      <% end %>
      <td><%= sclass.open  %></td>
      <td><%= sclass.CRN %></td>
      <td><%= sclass.course_code %></td>
      <td><%= sclass.course_num %></td>
      <td><%= sclass.Title %>
        <% if sclass.lab_time %>
          <br>
          <br>
          Lab</td>
      <% else %>
      </td>
      <%end %>
      <td><%= sclass.term %></td>
      <td><%= sclass.Credits %></td>
      <td><%= sclass.open_seats %></td>
      <td><%= sclass.tot_seats %></td>
      <td><%= sclass.Days %>
      <% if sclass.lab_day %>
      <br>
      <br>
        <%= sclass.lab_day%></td>
      <% else %>
        </td>
      <% end %>
      <td><%= sclass.Time%>
      <% if sclass.lab_time %>
      <br>
       <br>
      <%= sclass.lab_time%></td>
      <% else %>
      </td>
      <% end %>
      <td><%= sclass.Location %>
      <% if sclass.lab_loc %>
      <br>
       <br>
      <%= sclass.lab_loc %></td>
    <% else %>
      </td>
    <% end %>
  <td><%= sclass.Instructor%>
    <% if sclass.loc_prof %>
    <br>
     <br>
    <%= sclass.loc_prof %></td>
    <% else %>
      </td>
    <% end %>
    </tr>
  <% end %>

</tbody>

</table>



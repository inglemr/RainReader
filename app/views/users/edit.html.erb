<% provide(:title, "Edit User") %>

<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'login' %>

      <%= f.label :email %>
      <%= f.email_field :email,class: 'login' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'login' %>

      <%= f.label :password_confirmation, "Confirmation" %>

      <%= f.password_field :password_confirmation, class: 'login' %>

      <%= f.label :gswid,"GSW RAIN ID" %>
      <%= f.text_field :gswid, class: 'login' %>

      <%= f.label :gswpin, "GSW RAIN Pin" %>
      <%= f.text_field :gswpin,class: 'login' %>
      <%= f.submit "Save changes",  class: "btn btn-primary" %>

      <% end %>

      <div class= "gravatar_edit">
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails" target="_blank">change</a>
        </div>
      </div>
    </div>

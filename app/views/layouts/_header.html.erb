<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Rain Reader", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right nav-pills">
            <li><%= link_to "Home",   root_path %></li>
            <li><%= link_to "Help",   help_path %></li>

            <% if logged_in? %>
              <% if current_user.admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li class="center"><%= link_to "Users", users_path, class:'btn btn-primary adminMenu'%></li>
                  <li>
                    <%= link_to  refresh_classlist_action_path,class:'btn btn-primary adminMenu' do %>
                    <span class="glyphicon glyphicon-refresh"></span>Refresh Class List
                    <% end %>
                  </li>
                  <li>
                    <%= link_to  delete_classlist_action_path,class:'btn btn-primary adminMenu' do %>
                    <span class="glyphicon glyphicon-refresh"></span>Delete Class List
                    <% end %>
                  </li>
                </ul>
              </li>
              <% end%>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user)%></li>
                  <li class="divider"></li>
                  <li><%= link_to "Log out", logout_path,method: "delete" %></li>
                </ul>
              </li>
              <% else %>
            <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <% if logged_in? %>
    <nav class="navbar-default">
       <ul class="nav  nav-tabs nav-justified">
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Schedule", root_path %></li>
          <li class="<%= 'active' if current_page?(class_list_path) %>"><%= link_to "Spring 2016 Schedule", class_list_path %></li>
    
        </ul>
        <% end %>
    </nav>
